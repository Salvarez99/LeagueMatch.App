{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // IMPORTANT: reset inherited paths
    "paths": {
      "@Shared/*": ["../../Shared/*"]
    },

    "baseUrl": ".",
    "rootDir": "..\\..",
    "outDir": "./lib",
    "strict": true,
    "target": "ES2017",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src", "../../Shared/**/*.ts", "../../Shared/**/*.d.ts"],
  "exclude": ["node_modules", "lib"]
}
