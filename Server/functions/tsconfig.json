{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@Shared/*": ["../../Packages/Shared/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
