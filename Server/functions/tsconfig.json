{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "strict": false,
    "allowJs": true,
    "module": "commonjs",
    "target": "es2020",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}