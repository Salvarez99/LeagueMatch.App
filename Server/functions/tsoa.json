{
  "entryFile": "src/app.ts",
  "controllerPathGlobs": ["src/controllers/**/*.ts"],
  "spec": {
    "outputDirectory": "src/tsoa",
    "specVersion": 3,
    "securityDefinitions": {
      "firebaseAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  },
  "routes": {
    "routesDir": "src/tsoa",
    "authenticationModule": "src/auth/expressAuth.ts"
  }
}
